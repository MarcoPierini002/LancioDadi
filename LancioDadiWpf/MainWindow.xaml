<Window x:Class="LancioDadiWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LancioDadiWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF00FF51" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image Source="download.jpg" Stretch="Fill"/>
        <Button x:Name="Btn_LancioDadi" Content="Tira i dadi" HorizontalAlignment="Left" VerticalAlignment="Top" Width="144" Margin="10,10,0,0" Height="56"  FontSize="16" Click="Btn_LancioDadi_Click"/>
        <Label x:Name="Lbl_risultato" Content="" HorizontalAlignment="Left" Height="56" Margin="10,111,0,0" VerticalAlignment="Top" Width="144" FontSize="16"/>

    </Grid>
</Window>
